{
  "name": "alignmentapi",
  "version": "0.0.2",
  "description": "An API to align words from a source language sentence to other words from a target language sentence. It generates a JSON.",
  "source": "index.js",
  "main": "dist/main.js",
  "scripts": {
    "test": "bash -c \"tape -r @babel/register tests/code/**/*.cjs | node_modules/tap-summary/bin/cmd.js\"",
    "win:test": "bash -c \"tape -r @babel/register tests/code/**/*.cjs | node_modules/tap-summary/bin/cmd.js\"",
    "rawTest": "bash -c \"tape -r @babel/register tests/code/**/*.cjs\"",
    "watch": "parcel watch",
    "build": "rm -fr dist && parcel build --no-source-maps",
    "prepublishOnly": "npm run build && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DanielC-N/alignementAPI.git"
  },
  "keywords": [
    "alignment",
    "proskomma",
    "epitelete",
    "API"
  ],
  "author": "Nicolas Condomitti",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DanielC-N/alignementAPI/issues"
  },
  "homepage": "https://github.com/DanielC-N/alignementAPI#readme",
  "dependencies": {
    "axios": "^1.3.4",
    "fs-extra": "^11.1.1",
    "lodash": "^4.17.21",
    "path": "^0.12.7",
    "pipeline-handler": "^2.2.2",
    "proskomma-core": "^0.10.1",
    "proskomma-json-tools": "^0.7.0",
    "xregexp": "^5.1.1"
  },
  "devDependencies": {
    "@babel/register": "^7.21.0",
    "node-fetch": "^3.3.1",
    "parcel": "^2.8.3",
    "tap-summary": "^4.0.0",
    "tape": "^5.6.3"
  }
}
